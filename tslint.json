{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    "arrow-parens": [false],
    "no-consecutive-blank-lines": [true],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "no-empty": [false],
    "quotemark": [true, "single"],
    "trailing-comma": [false],
    "no-angle-bracket-type-assertion": [false],
    "object-literal-sort-keys": [false]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["demo/*"]
  }
}
